<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              xmlns:tools="http://schemas.android.com/tools"
              android:background="@color/white"
              android:gravity="center_vertical"
              android:orientation="vertical"
    >

    <com.github.customview.MyLinearLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:gravity="center"
        app:my_ll_border_color="@color/gray_ea"
        app:my_ll_border_width="1dp"
        app:my_ll_solid="@color/white"
        >

        <ImageView
            android:id="@+id/ivItemYudingIcon"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:scaleType="centerCrop"
            tools:src="@drawable/banner"
            />
    </com.github.customview.MyLinearLayout>

    <TextView
        android:id="@+id/tvItemYudingName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:maxLines="1"
        android:padding="10dp"
        tools:text="水月捞坊猪肚鸡"
        android:textColor="@color/gray_33"
        />


    <TextView
        android:id="@+id/tvItemYudingAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:drawableLeft="@drawable/home_address"
        android:drawablePadding="3dp"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        tools:text="1.5KM"
        />


</LinearLayout>