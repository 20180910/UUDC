<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:gravity="center_vertical"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/background_f2"
        android:padding="2px"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        >
        <ImageView
            android:id="@+id/iv_item_home_like_icon"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            android:src="@drawable/banner"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:gravity="center_vertical"
            >
            <TextView
                android:id="@+id/tv_item_home_like_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="海底捞(宝山店)"
                android:textColor="@color/gray_33"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                >
                <ImageView
                    android:id="@+id/iv_item_home_like_star1"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/star"
                    android:layout_marginRight="2dp"
                    />
                <ImageView
                    android:id="@+id/iv_item_home_like_star2"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/star"
                    android:layout_marginRight="2dp"
                    />
                <ImageView
                    android:id="@+id/iv_item_home_like_star3"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/star"
                    android:layout_marginRight="2dp"
                    />
                <ImageView
                    android:id="@+id/iv_item_home_like_star4"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/star"
                    android:layout_marginRight="2dp"
                    />
                <ImageView
                    android:id="@+id/iv_item_home_like_star5"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/star"
                    android:layout_marginRight="2dp"
                    />
                <TextView
                    android:id="@+id/tv_item_home_like_star_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5.0"
                    android:layout_marginLeft="5dp"
                    />
                <TextView
                    android:id="@+id/tv_item_home_like_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥ 100/人"
                    android:layout_marginLeft="10dp"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/tv_item_home_like_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="江苏路长宁区"
                android:drawableLeft="@drawable/home_address"
                android:drawablePadding="3dp"
                android:textSize="12sp"
                android:maxLines="1"
                android:ellipsize="end"
                />
                <com.github.customview.FlowLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    >
                    <com.github.customview.MyTextView
                        android:id="@+id/tv_item_home_like_type1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="炒菜"
                        android:textColor="@color/home_green"
                        app:my_tv_border_color="@color/home_green"
                        app:my_tv_all_line="true"
                        android:paddingTop="1dp"
                        android:paddingBottom="1dp"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:textSize="12sp"
                        app:my_tv_corner_radius="2dp"
                        android:layout_marginRight="3dp"
                        />
                    <com.github.customview.MyTextView
                        android:id="@+id/tv_item_home_like_type2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="炒菜"
                        android:textColor="@color/home_green"
                        app:my_tv_border_color="@color/home_green"
                        app:my_tv_all_line="true"
                        android:paddingTop="1dp"
                        android:paddingBottom="1dp"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:textSize="12sp"
                        app:my_tv_corner_radius="2dp"
                        android:layout_marginRight="3dp"
                        />
                    <com.github.customview.MyTextView
                        android:id="@+id/tv_item_home_like_type3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="饮料酒水"
                        android:textColor="@color/home_green"
                        app:my_tv_border_color="@color/home_green"
                        app:my_tv_all_line="true"
                        android:paddingTop="1dp"
                        android:paddingBottom="1dp"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:textSize="12sp"
                        app:my_tv_corner_radius="2dp"
                        android:layout_marginRight="3dp"
                        />
                </com.github.customview.FlowLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_item_home_like_juli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.5KM"
            />
    </LinearLayout>

</LinearLayout>