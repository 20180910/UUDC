<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/background_f2"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="原密码"
            android:ems="5"
            android:textColor="@color/gray_33"
            />
        <com.github.customview.MyEditText
            android:id="@+id/et_update_pwd_old"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:textSize="13sp"
            android:hint="原密码"
            android:textColor="@color/gray_33"
            android:inputType="textPassword"
            android:imeOptions="actionNext"
            android:maxLines="1"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新密码"
            android:ems="5"
            android:textColor="@color/gray_33"
            />
        <com.github.customview.MyEditText
            android:id="@+id/et_update_pwd_new"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:textSize="13sp"
            android:hint="新密码"
            android:textColor="@color/gray_33"
            android:inputType="textPassword"
            android:imeOptions="actionNext"
            android:maxLines="1"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认密码"
            android:ems="5"
            android:textColor="@color/gray_33"
            />
        <com.github.customview.MyEditText
            android:id="@+id/et_update_pwd_new2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:textSize="13sp"
            android:hint="确认密码"
            android:textColor="@color/gray_33"
            android:inputType="textPassword"
            android:imeOptions="actionNext"
            android:maxLines="1"
            />
    </LinearLayout>
    <com.github.customview.MyTextView
        android:id="@+id/tv_update_pwd_sure"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="确定"
        android:gravity="center"
        android:textColor="@color/white"
        app:my_tv_solid="@color/orange"
        android:layout_margin="10dp"
        android:textSize="16sp"
        app:my_tv_corner_radius="4dp"
        />
</LinearLayout>