<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/background_f2"
              android:orientation="vertical"
    >

    <include layout="@layout/app_title"/>

    <com.github.customview.MyLinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:my_ll_corner_radius="4dp"
        app:my_ll_solid="@color/white"
        >

        <ImageView
            android:layout_width="13dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:adjustViewBounds="true"
            android:src="@drawable/register_phone"
            />

        <EditText
            android:id="@+id/et_forget_ped_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:inputType="number"
            android:imeOptions="actionNext"
            android:hint="请输入手机号"
            android:textSize="13sp"
            />
    </com.github.customview.MyLinearLayout>

    <com.github.customview.MyLinearLayout

        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="2px"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:my_ll_corner_radius="4dp"
        app:my_ll_solid="@color/white"
        >

        <ImageView
            android:layout_width="13dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:adjustViewBounds="true"
            android:src="@drawable/register_code"
            />

        <EditText
            android:id="@+id/et_forget_ped_code"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:hint="请输入验证码"
            android:textSize="13sp"
            android:inputType="number"
            android:imeOptions="actionNext"
            />

        <TextView
            android:id="@+id/tv_forget_ped_huoqu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:ems="5"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="@color/gray_33"
            />
    </com.github.customview.MyLinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:paddingTop="15dp"
        android:text="设置你的新密码"
        />

    <EditText
        android:id="@+id/et_forget_ped_password"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:hint="请输入6-10位数字字母的组合"
        android:paddingLeft="10dp"
        android:textSize="13sp"
        android:inputType="textPassword"
        android:imeOptions="actionNext"
        />

    <com.github.customview.MyTextView
        android:id="@+id/tv_forget_ped_sure"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="确认"
        android:textColor="@color/white"
        app:my_tv_corner_radius="4dp"
        app:my_tv_press="@color/orange_press"
        app:my_tv_solid="@color/orange"
        />
</LinearLayout>
