<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingTop="13dp"
    >
    <LinearLayout
        android:id="@+id/ll_shangpin_youhuiquan"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/shangjia_youhui"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥"
                android:textColor="@color/orange"
                android:textSize="11sp"
                android:layout_marginLeft="15dp"
                />
            <TextView
                android:id="@+id/tv_home_hongbao_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="8"
                android:textColor="@color/orange"
                android:textSize="25sp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                >
                <TextView
                    android:id="@+id/tv_home_hongbao_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="通用红包"
                    android:textColor="@color/gray_33"
                    />
                <TextView
                    android:id="@+id/tv_home_hongbao_man"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="满多少可用"
                    android:textSize="11sp"
                    android:layout_marginTop="5dp"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:background="@drawable/shangjia_youhui2"
            android:gravity="center"
            >
            <com.github.customview.MyTextView
                android:id="@+id/tv_home_hongbao_get"
                android:layout_width="65dp"
                android:layout_height="26dp"
                android:text="领取"
                app:my_tv_solid="@color/orange"
                android:textColor="@color/white"
                android:gravity="center"
                app:my_tv_corner_radius="4dp"
                android:textSize="13sp"
                />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>