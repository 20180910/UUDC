<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:tools="http://schemas.android.com/tools"
              android:background="@color/background_f2"
              android:orientation="vertical"
    >
    <include layout="@layout/app_title"/>

    <com.sk.uudc.base.ProgressLayout
        android:id="@id/pl_load"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_f2"
            android:layout_above="@+id/ll_sure_order"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <com.github.customview.MyLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:padding="10dp"
                    app:my_ll_corner_radius="10dp"
                    app:my_ll_solid="@color/white"
                    >

                    <LinearLayout
                        android:padding="10dp"
                        android:id="@+id/ll_place_order_shangdian"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        >

                        <ImageView
                            android:id="@+id/iv_place_order"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:scaleType="centerCrop"
                            tools:src="@drawable/banner"
                            />

                        <TextView
                            android:id="@+id/tv_place_order_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            tools:text="香满楼私房菜"
                            />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="centerCrop"
                            android:src="@drawable/jiantou_right"
                            />
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2px"
                        android:background="@color/gray_f4"/>


                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_price_order"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2px"
                        android:background="@color/white"

                        >
                    </android.support.v7.widget.RecyclerView>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2px"
                        android:background="@color/gray_f4"/>
                    <LinearLayout
                        android:id="@+id/ll_youhui_type"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        >
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="订单优惠"
                            android:textColor="@color/gray_33"
                            android:paddingLeft="10dp"
                            />
                        <TextView
                            android:id="@+id/tv_youhui_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="满减优惠"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/jiantou_right"
                            android:layout_marginLeft="10dp"
                            />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tv_price_order_youhui"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="-¥5"
                        android:gravity="right"
                        android:textColor="@color/red"
                        />
                </com.github.customview.MyLinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    >
                    <TextView
                        android:id="@+id/tv_price_order_dingdan_price"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        tools:text="订单¥19"
                        />
                    <TextView
                        android:id="@+id/tv_price_order_daizhifu_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="待支付¥19"
                        android:textColor="@color/gray_33"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:background="@color/white"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black_33"
                        android:text="用餐时间"
                        />
                    <TextView
                        android:id="@+id/tv_price_order_time"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:layout_height="wrap_content"
                        android:paddingRight="15dp"
                        tools:text="2017-9-9"
                        android:textColor="@color/gray_33"
                        />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="@color/gray_f4"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@color/white"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black_33"
                        android:text="用餐人数"
                        />
                    <TextView
                        android:id="@+id/tv_price_order_num"
                        android:layout_width="0dp"
                        android:paddingRight="15dp"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:layout_height="wrap_content"
                        tools:text="0"
                        android:textColor="@color/gray_33"
                        />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="@color/gray_f4"/>
                <com.github.customview.MyCheckBox
                    android:id="@+id/cb_place_order_baojian"
                    android:enabled="false"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:button="@null"
                    app:my_checkbox_checked="@drawable/right_kai"
                    app:my_checkbox_normal="@drawable/right_guan"
                    android:checked="false"
                    app:my_checkbox_checked_drawable="right"
                    android:text="是否需要包间"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="@color/gray_f4"/>
                <!--<com.github.customview.MyCheckBox
                    android:id="@+id/cb_place_order_fapiao"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:button="@null"
                    android:checked="true"
                    app:my_checkbox_checked_drawable="right"
                    app:my_checkbox_checked="@drawable/my_check_select"
                    app:my_checkbox_normal="@drawable/my_check_normal"

                    android:text="发票"/>-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    >
                    <com.github.customview.MyCheckBox
                        android:id="@+id/cb_place_order_fapiao"
                        android:background="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:button="@null"
                        android:checked="true"
                        app:my_checkbox_checked_drawable="right"
                        app:my_checkbox_checked="@drawable/my_check_select"
                        app:my_checkbox_normal="@drawable/my_check_normal"

                        android:text="发票"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_tijiao_order_fapiao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    >
                    <RadioGroup
                        android:layout_width="match_parent"
                        android:background="@color/white"
                        android:layout_height="30dp"
                        android:orientation="horizontal"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:gravity="center_vertical"
                        >
                        <com.github.customview.MyRadioButton
                            android:id="@+id/rb_place_order_fapiao_geren"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:button="@null"
                            android:text="个人"
                            android:checked="true"
                            app:my_radio_checked_drawable="left"
                            app:my_radio_checked="@drawable/pay_select"
                            app:my_radio_normal="@drawable/pay_nomal"
                            android:drawablePadding="5dp"
                            android:textColor="@color/gray_66"
                            />
                        <com.github.customview.MyRadioButton
                            android:layout_marginLeft="30dp"
                            android:id="@+id/rb_place_order_fapiao_gongsi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:button="@null"
                            android:text="公司"
                            app:my_radio_checked_drawable="left"
                            app:my_radio_checked="@drawable/pay_select"
                            app:my_radio_normal="@drawable/pay_nomal"
                            android:drawablePadding="5dp"
                            android:textColor="@color/gray_66"
                            />
                    </RadioGroup>
                    <EditText
                        android:id="@+id/et_place_order_fapiao_danwei"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="@color/white"
                        android:textSize="14sp"
                        android:hint="单位名称"
                        android:inputType="text"
                        android:paddingLeft="10dp"
                        android:imeOptions="actionNext"
                        />
                    <EditText
                        android:id="@+id/et_place_order_fapiao_shibiehao"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="@color/white"
                        android:paddingLeft="10dp"
                        android:textSize="14sp"
                        android:hint="纳税人识别号"
                        android:inputType="textWebEditText"
                        android:imeOptions="actionNext"
                        android:visibility="gone"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/white"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginTop="2px"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black_33"
                        android:text="备注信息"
                        android:ems="5"/>
                    <com.github.customview.MyEditText
                        android:id="@+id/et_place_order_beizhu"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:textSize="14sp"
                        android:hint="口味偏好等进行备注"
                        android:inputType="text"
                        android:imeOptions="actionNext"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/white"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black_33"
                        android:text="联系人姓名"
                        android:ems="5"
                        />
                    <com.github.customview.MyEditText
                        android:id="@+id/et_place_order_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:textSize="14sp"
                        android:hint="请输入联系人姓名"
                        android:inputType="text"
                        android:imeOptions="actionNext"/>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="@color/gray_f4"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/white"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black_33"
                        android:text="联系方式"
                        android:ems="5"/>
                    <com.github.customview.MyEditText
                        android:id="@+id/et_place_order_lianxi"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:textSize="14sp"
                        android:inputType="number"
                        android:hint="请输入联系方式"
                        android:imeOptions="actionNext"/>

                </LinearLayout>



            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>
        <LinearLayout
            android:id="@+id/ll_sure_order"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/black"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="待支付 ¥"
                android:textColor="@color/white"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/tv_place_order_price"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                tools:text="200"
                android:textColor="@color/white"
                android:textSize="15sp"/>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tv_place_order"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@color/orange"
                android:gravity="center"
                android:text="提交订单"
                android:textColor="@color/black"
                android:textSize="15sp"/>

        </LinearLayout>
    </com.sk.uudc.base.ProgressLayout>

</LinearLayout>