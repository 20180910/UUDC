<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:gravity="center_vertical"
    >
    <com.github.customview.MyCheckBox
        android:id="@+id/ch_item_my_collect"
        android:layout_width="30dp"
        android:layout_marginLeft="10dp"
        android:layout_height="70dp"
        app:my_checkbox_checked="@drawable/my_check_select"
        app:my_checkbox_normal="@drawable/my_check_normal"
        android:visibility="gone"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="10dp"

        android:layout_marginTop="8dp"
        android:background="@color/background_f2"
        android:padding="2px"
        >

        <ImageView
            android:id="@+id/iv_item_my_collect_icon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="centerCrop"
            android:src="@drawable/banner"
            />
    </LinearLayout>

    <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            >
            <TextView
                android:id="@+id/tv_item_my_collect_name"
                android:layout_width="match_parent"
                android:paddingRight="10dp"
                android:maxLines="1"
                android:layout_height="wrap_content"

                android:text="海底捞(宝山店)"
                android:textColor="@color/gray_33"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                >
                <ImageView
                    android:id="@+id/iv_item_my_collect_star1"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/star"
                    android:layout_marginRight="2dp"
                    />
                <ImageView
                    android:id="@+id/iv_item_my_collect_star2"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/star"
                    android:layout_marginRight="2dp"
                    />
                <ImageView
                    android:id="@+id/iv_item_my_collect_star3"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/star"
                    android:layout_marginRight="2dp"
                    />
                <ImageView
                    android:id="@+id/iv_item_my_collect_star4"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/star"
                    android:layout_marginRight="2dp"
                    />
                <ImageView
                    android:id="@+id/iv_item_my_collect_star5"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/star"
                    android:layout_marginRight="2dp"
                    />
                <TextView
                    android:id="@+id/tv_item_my_collect_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5.0"
                    android:layout_marginLeft="5dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/white"
                >
                <TextView
                    android:id="@+id/tv_item_my_collect_address"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="江苏路长宁区"
                    android:drawableLeft="@drawable/home_address"
                    android:drawablePadding="3dp"
                    android:paddingRight="10dp"
                    android:maxLines="1"
                    />
                <TextView
                    android:id="@+id/tv_item_my_collect_juli"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.5KM"
                    android:layout_marginRight="10dp"
                    />
            </LinearLayout>

        </LinearLayout>



</LinearLayout>