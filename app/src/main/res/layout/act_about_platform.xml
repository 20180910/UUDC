<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/background_f2"
    >
<include layout="@layout/app_title"/>

    <com.sk.uudc.base.ProgressLayout
        android:id="@id/pl_load"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        >

                        <ImageView
                            android:id="@+id/iv_about_platform_icon"
                            android:layout_width="100dp"
                            android:layout_height="100dp"

                            android:src="@drawable/about_platform"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:id="@+id/tv_about_platform_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:text="公司介绍"
                            android:textColor="@color/gray_33"
                            />

                        <TextView
                            android:id="@+id/tv_about_platform_edition"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:text="成立于2008年，我公司为各行业提供专业的IT技术服务，经过成立于2008年，我公司为各行业提供专业的IT技术服务，经过成立于2008年，我公司为各行业提供专业的IT技术服务，经过成立于2008年，我公司为各行业提供专业的IT技术服务，经过成立于2008年，我公司为各行业提供专业的IT技术服务，经过成立于2008年，我公司为各行业提供专业的IT技术服务，经过成立于2008年，我公司为各行业提供专业的IT技术服务，经过"
                            />
                            <TextView
                                android:layout_marginTop="20dp"
                                android:id="@+id/tv_about_platform_phone"
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:padding="10dp"
                                android:text="联系电话："/>


                            <TextView
                                android:id="@+id/tv_about_platform_qq"
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:padding="10dp"
                                android:text="QQ:"/>


                            <TextView
                                android:id="@+id/tv_about_platform_email"
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:padding="10dp"
                                android:layout_marginBottom="30dp"
                                android:text="email:"/>

                    </LinearLayout>

                </LinearLayout>
            </android.support.v4.widget.NestedScrollView>
        </LinearLayout>
    </com.sk.uudc.base.ProgressLayout>

</LinearLayout>