<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical"
    >
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/gray_f4"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp">

        <ImageView
            android:id="@+id/iv_order_item_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/shangjia_food"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingTop="15dp">

            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_order_item_shangjia_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="和喜粤式美食(澳门路店)"
                    android:textColor="@color/gray_99"
                    android:textSize="16sp"
                    />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/tv_order_item_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="待付款"
                    android:textColor="@color/home_green"
                    android:textSize="16sp"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="10dp"
                android:background="@color/gray_f4"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_order_item_shangpin_name"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:padding="10dp"
                    android:text="日式爽滑蒸蛋等两件商品"
                    android:textColor="@color/gray_66"
                    android:textSize="16sp"
                    />

                <TextView
                    android:id="@+id/tv_order_item_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="¥19"
                    android:textColor="@color/gray_66"
                    android:textSize="16sp"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_order_item_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="9月12号 10:00用餐"
                android:textSize="13sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="2dp">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>

                <com.github.customview.MyTextView
                    android:id="@+id/tv_order_item_lijifukuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:text="立即付款"
                    android:textColor="@color/gray_33"
                    android:textSize="13sp"
                    android:visibility="gone"
                    app:my_tv_border_color="@color/gray_99"
                    app:my_tv_border_width="1dp"
                    app:my_tv_corner_radius="5dp"
                    app:my_tv_solid="@color/white"/>

                <com.github.customview.MyTextView
                    android:id="@+id/tv_order_item_quxiao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:text="取消订单"
                    android:textColor="@color/gray_33"
                    android:textSize="13sp"
                    android:visibility="gone"
                    app:my_tv_border_color="@color/gray_99"
                    app:my_tv_border_width="1dp"
                    app:my_tv_corner_radius="5dp"
                    app:my_tv_solid="@color/white"/>

                <com.github.customview.MyTextView
                    android:id="@+id/tv_order_item_tuikuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:text="申请退款"
                    android:textColor="@color/gray_33"
                    android:textSize="13sp"
                    android:visibility="gone"
                    app:my_tv_border_color="@color/gray_99"
                    app:my_tv_border_width="1dp"
                    app:my_tv_corner_radius="5dp"
                    app:my_tv_solid="@color/white"/>

                <com.github.customview.MyTextView
                    android:id="@+id/tv_order_item_pingjia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:text="立即评价"
                    android:textColor="@color/gray_33"
                    android:textSize="13sp"
                    android:visibility="gone"
                    app:my_tv_border_color="@color/gray_99"
                    app:my_tv_border_width="1dp"
                    app:my_tv_corner_radius="5dp"
                    app:my_tv_solid="@color/white"/>

                <com.github.customview.MyTextView
                    android:id="@+id/tv_order_item_chakan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:text="查看核销码"
                    android:textColor="@color/gray_33"
                    android:textSize="13sp"
                    app:my_tv_border_color="@color/gray_99"
                    app:my_tv_border_width="1dp"
                    app:my_tv_corner_radius="5dp"
                    app:my_tv_solid="@color/white"/>

                <com.github.customview.MyTextView
                    android:id="@+id/tv_order_item_jiacai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:text="我要加菜"
                    android:textColor="@color/home_green"
                    android:textSize="13sp"
                    app:my_tv_border_color="@color/home_green"
                    app:my_tv_border_width="1dp"
                    app:my_tv_corner_radius="5dp"
                    app:my_tv_solid="@color/white"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray_f4"/>


</LinearLayout>