<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/background_f2"
    >
    <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@color/white"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="商家评分:"
                        android:layout_marginLeft="10dp"
                        />
                    <TextView
                        android:id="@+id/tv_shangjia_evaluate_pingfen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="4.5分"
                        android:textColor="@color/orange"
                        android:layout_marginLeft="10dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    >
                    <com.github.customview.FlowLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:layout_marginTop="5dp"
                        >
                        <com.github.customview.MyTextView
                            android:id="@+id/tv_shangjia_evaluate_all"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="全部(0)"
                            android:textColor="@color/orange"
                            app:my_tv_solid="@color/white"
                            app:my_tv_all_line="true"
                            app:my_tv_border_color="@color/orange"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:layout_marginRight="10dp"
                            />
                        <com.github.customview.MyTextView
                            android:id="@+id/tv_shangjia_evaluate_good"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="好评(0)"
                            android:textColor="@color/gray_33"
                            app:my_tv_solid="@color/white"
                            app:my_tv_all_line="true"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:layout_marginRight="10dp"
                            />
                        <com.github.customview.MyTextView
                            android:id="@+id/tv_shangjia_evaluate_bad"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="差评(0)"
                            android:textColor="@color/gray_33"
                            app:my_tv_solid="@color/white"
                            app:my_tv_all_line="true"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:layout_marginRight="10dp"
                            />
                    </com.github.customview.FlowLayout>
                </LinearLayout>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_shang_jia_evaluate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="2px"
                    >

                </android.support.v7.widget.RecyclerView>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

</LinearLayout>