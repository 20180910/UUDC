<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/background_f2"
    >
<include layout="@layout/app_title"/>
    <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <com.github.customview.MyLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:my_ll_solid="@color/white"
                    android:gravity="center_vertical"
                    app:my_ll_corner_topLeftRadius="5dp"
                    app:my_ll_corner_topRightRadius="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:padding="10dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@color/white"
                        >
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/banner"
                            />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="香满楼私房菜"
                            android:layout_marginLeft="10dp"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="centerCrop"
                            android:src="@drawable/jiantou_right"
                            />
                    </LinearLayout>
                </com.github.customview.MyLinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_pay_cai"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2px"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:padding="10dp"
                    android:background="@color/white"
                    >
                </android.support.v7.widget.RecyclerView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@color/white"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="2px"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="商家优惠"
                        android:textColor="@color/gray_33"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-¥5"
                        android:textColor="@color/red"
                        />
                </LinearLayout>
                <com.github.customview.MyLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    app:my_ll_solid="@color/white"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="2px"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    app:my_ll_corner_bottomLeftRadius="5dp"
                    app:my_ll_corner_bottomRightRadius="5dp"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="订单¥19"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="待支付¥19"
                        android:textColor="@color/gray_33"
                        />
                </com.github.customview.MyLinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="选择支付方式"
                    android:paddingLeft="10dp"
                    android:gravity="center_vertical"
                    android:background="@color/white"
                    android:layout_marginTop="10dp"
                    />
                <RadioGroup
                    android:id="@+id/rg_select_pay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:layout_marginTop="2px"
                    >
                    <com.github.customview.MyRadioButton
                        android:id="@+id/rb_pay_yue"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@color/white"
                        android:layout_marginTop="2px"
                        android:text="余额"
                        android:checked="true"
                        app:my_radio_checked="@drawable/pay_select"
                        app:my_radio_normal="@drawable/pay_nomal"
                        app:my_radio_checked_drawable="right"
                        android:button="@drawable/pay_yue"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="10dp"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2px"
                        android:background="@color/background_f2"
                        />
                    <com.github.customview.MyRadioButton
                        android:id="@+id/rb_pay_zhifubao"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@color/white"
                        android:layout_marginTop="2px"
                        android:text="支付宝支付"
                        app:my_radio_checked="@drawable/pay_select"
                        app:my_radio_normal="@drawable/pay_nomal"
                        app:my_radio_checked_drawable="right"
                        android:button="@drawable/alipay"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="10dp"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2px"
                        android:background="@color/background_f2"
                        />
                    <com.github.customview.MyRadioButton
                        android:id="@+id/rb_pay_weixin"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@color/white"
                        android:layout_marginTop="2px"
                        android:text="微信支付"
                        app:my_radio_checked="@drawable/pay_select"
                        app:my_radio_normal="@drawable/pay_nomal"
                        app:my_radio_checked_drawable="right"
                        android:button="@drawable/weixinpay"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="10dp"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2px"
                        android:background="@color/background_f2"
                        />
                </RadioGroup>
                <com.github.customview.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="确定"
                    android:textColor="@color/white"
                    app:my_tv_solid="@color/orange"
                    app:my_tv_press="@color/orange_press"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    app:my_tv_corner_radius="4dp"
                    />

            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

</LinearLayout>